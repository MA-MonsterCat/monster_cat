<div class="demo-card-square mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title mdl-card--expand">
    <div class="mdl-card__supporting-text">
      <h2 class="mdl-card__title-text">Give Feedback on</h2>
      <h3><%= @workshop.name %></h3>
    </div>
  </div>
  <div class="mdl-card__supporting-text">
    <%= form_for [@workshop, @feedback] do |f| %>
      <%= f.text_area :body, rows: '5', placeholder: 'What did you think?', class: 'mdl-textfield__input' %>
      <%= f.submit 'Add Feedback', class: 'mdl-card__actions mdl-card--border mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>
    <% end %>
  </div>
</div>
