<div class="demo-card-square-main mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title mdl-card--expand">
    <div class="mdl-card__supporting-text">
      <h2 class="mdl-card__title-text"><%= @workshop.name %></h2>
      <h2 class="mdl-card__title-text"><%= @workshop.url %></h2>
    </div>
  </div>
  <div class="mdl-card__supporting-text">
    <%= link_to('Update', edit_workshop_path(@workshop), class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect") %>
    <%= link_to('Delete', workshop_path(@workshop), method: :delete, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect") %>
    <%= link_to('Add Feedback', new_workshop_feedback_path(@workshop), class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect") %>
  </div>
</div>

<% @workshop.feedbacks.each do |feedback|  %>
  <div class="demo-card-square mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand">
      <div class="mdl-card__supporting-text feedback-body">
        <h2 class="mdl-card__title-text"><%= feedback.body %></h2>
      </div>
    </div>
    <div class="mdl-card__supporting-text">
      <%= image_tag feedback.user.avatar_url, class: "mdl-layout-icon feedback-avatar" %>
      <%= feedback.user.username %>
      <%= feedback.created_at.strftime("%m/%d/%Y at %H:%M") %>
    </div>
  </div>
<% end %>
