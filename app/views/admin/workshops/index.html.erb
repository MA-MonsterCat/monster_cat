<div class="page-content workshop-create-button">
  <%= link_to('add workshop', new_admin_workshop_path, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect") %>
</div>
<% @workshops.each do |workshop|  %>
  <div class="demo-card-square mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand">
      <h2 class="mdl-card__title-text"><%= link_to(workshop.name, admin_workshop_path(workshop)) %></h2>
    </div>
    <div class="mdl-card__supporting-text">
      <%= workshop.description %>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <%= link_to('view on github', workshop.url, target: '_blank', class: "mdl-button mdl-js-button")  %>
    </div>
    <div class="mdl-card__menu">
      <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
        <i class="material-icons">share</i>
      </button>
    </div>
  </div>
<% end %>
